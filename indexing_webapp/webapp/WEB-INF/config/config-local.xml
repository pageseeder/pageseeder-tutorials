<?xml version="1.0"?>
<!--
  This file contains the global settings made available to generators in development mode (dev).

  @version BerliozBase-0.8.1
-->
<global>

  <flint>
    <watcher max-folders="-1" delay="0" />
    <index types="films">
      <films name="default" path="/psml/content/films"  template="films.xsl" autosuggests="words,movies,usmovies,people">
        <files excludes="film-26.psml" />
        <words     fields="fulltext"                       terms="true" />
        <people    fields="actor,director,producer,writer" />
        <movies    fields="title,actor,director"           result-fields="image,title,year,genre,country" />
        <usmovies  fields="title,actor,director"           result-fields="image,title,year,genre,country" weight="american-level:2" />
      </films>
      <bios name="bios" path="/psml/content/bios" template="bios.xsl">
      </bios>
    </index>
  </flint>
</global>
